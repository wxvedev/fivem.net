---
import { ClientRouter } from "astro:transitions";
import Header from "@/components/global/Header.astro";
import "@fontsource-variable/inter";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo.webp" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={Astro.props.description} />
    <title>{Astro.props.title}</title>
    <ClientRouter />
  </head>
  <body class="bg-light text-black dark:bg-main dark:text-white font-inter">
    <Header />
    <main class="flex flex-col gap-8 mx-auto md:w-[80%] py-12 px-8 md:px-0">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  <style is:global > @keyframes enter {
    from {
      transform: translateY(100px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  .enter {
    animation: enter 0.4s ease forwards;
  }

  #mobile-menu {
    z-index: 60;
  }

  #menu-toggle {
    z-index: 50;
  }
</style>
