---
import XIcon from "@/assets/icons/brands/X.astro";
import GitHubIcon from "@/assets/icons/brands/GitHub.astro";
import DiscordIcon from "@/assets/icons/brands/Discord.astro";

const links = [
  {
    name: "Servers",
    url: "https://servers.fivem.net/",
  },
  {
    name: "Forums",
    url: "https://forum.fivem.net/",
  },
  {
    name: "Docs",
    url: "https://docs.fivem.net/",
  },
  {
    name: "Portal",
    url: "https://portal.cfx.re/",
  },
];

const socials = [
  {
    icon: XIcon,
    url: "https://x.com/fivem/",
  },
  {
    icon: DiscordIcon,
    url: "https://discord.gg/fivem/",
  },
  {
    icon: GitHubIcon,
    url: "https://github.com/citizenfx/fivem/",
  },
];

const legal = [
  {
    name: "Privacy",
    url: "https://www.rockstargames.com/privacy",
  },
  {
    name: "Cookies",
    url: "https://www.rockstargames.com/cookies",
  },
  {
    name: "Do not sell or share my personal information",
    url: "https://www.rockstargames.com/ccpa",
  },
];
---

<footer class="space-y-4 md:w-[80%] px-8 py-12 md:py-8 md:px-0 md:mx-auto">
  <div class="flex flex-col md:flex-row gap-4 justify-between">
    <ul class="flex items-center gap-4">
      {
        links.map((link) => (
          <li>
            <a
              href={link.url}
              class="text-gray-500 dark:text-gray-300 hover:text-black dark:hover:text-gray-200 hover:underline font-medium transition-colors"
            >
              {link.name}
            </a>
          </li>
        ))
      }
    </ul>
    <ul class="flex items-center gap-4">
      {
        socials.map((social) => (
          <li>
            <a
              href={social.url}
              class="text-gray-500 dark:text-gray-300 hover:text-black dark:hover:text-gray-200 font-medium transition-colors"
            >
              <social.icon />
            </a>
          </li>
        ))
      }
    </ul>
  </div>
  <p class="text-gray-600 dark:text-gray-400">
    Rockstar Games, Inc. (C) 2016-2024, FiveM is a copyright and registered
    trademark of Take-Two Interactive Software, Inc. All rights reserved.
  </p>
  <ul class="flex flex-col md:flex-row justify-center md:items-center gap-4">
    {
      legal.map((link) => (
        <li>
          <a
            href={link.url}
            class="text-gray-500 dark:text-gray-300 hover:text-black dark:hover:text-gray-200 hover:underline font-medium transition-colors"
          >
            {link.name}
          </a>
        </li>
      ))
    }
  </ul>
</footer>
