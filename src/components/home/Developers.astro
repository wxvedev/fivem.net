---
import Link from "../global/Link.astro";

type Color = "lua" | "csharp" | "javascript";

type Language = {
  name: string;
  description: string;
  logo: string;
  url: string;
};

const languages: Language[] = [
  {
    name: "LUA",
    logo: "/languages/lua.webp",
    description:
      "A concise and lightweight dynamically typed language, easy to pick up.",
    url: "https://docs.fivem.net/scripting-manual/runtimes/lua",
  },
  {
    name: "C#",
    description:
      "Static typing and object orientation, for the most advanced projects.",
    logo: "/languages/csharp.webp",
    url: "https://docs.fivem.net/docs/scripting-manual/runtimes/csharp/",
  },
  {
    name: "JavaScript",
    description:
      "Use your existing web development knowledge and the rich package/tooling ecosystem.",
    logo: "/languages/javascript.webp",
    url: "https://docs.fivem.net/docs/scripting-manual/runtimes/javascript/",
  },
];
---

<main class="enter space-y-8 md:p-4 rounded-md" style="animation-delay: .25s;">
  <header class="space-y-1 text-center">
    <h1 class="text-4xl font-semibold tracking-tighter">We üíù Developers!</h1>
    <h4 class="text-gray-600 dark:text-gray-400">
      FiveM is built for creativity. Create your own server and make your dreams
      come true.
    </h4>
  </header>

  <main>
    <section class="grid grid-cols-1 lg:grid-cols-2 gap-16">
      <div class="flex flex-col gap-6">
        <header class="space-y-1">
          <h1 class="text-3xl md:text-4xl font-semibold tracking-tighter">
            Develop using your favorite language
          </h1>
          <h4 class="text-lg text-gray-600 dark:text-gray-400">
            With FiveM's extensive support for multiple programming languages,
            everyone can get started quickly.
          </h4>
        </header>

        <div class="flex flex-col md:flex-row gap-4">
          <Link
            text="Create a server now!"
            color="orange"
            class="md:w-fit text-center py-4 px-6 md:px-8 text-sm md:text-lg"
            url="/server-hosting"
            target="current"
          />
          <Link
            text="Read our docs"
            color="red"
            class="md:w-fit text-center py-4 px-6 md:px-8 text-sm md:text-lg"
            url="https://docs.fivem.net"
            target="new"
          />
        </div>

        <p class="text-lg text-gray-600 dark:text-gray-400">
          Our multiplayer modification framework provides a vast set of tools to
          personalize the gameplay experience of your server. Using our advanced
          and unique features, you can make anything you wish: roleplay,
          drifting, racing, deathmatch, or something completely original.
        </p>
      </div>
      <ul class="grid grid-cols-1 gap-8">
        {
          languages.map((language) => {
            const color = language.name.toLowerCase() as Color;
            return (
              <li>
                <a
                  class="bg-black/[0.02] dark:bg-white/[0.02] border dark:border-white/25 border-black/25 backdrop-blur-md rounded-md flex items-center gap-4 px-4 hover:-translate-y-1 transition-all"
                  href={language.url}
                >
                  <img
                    class="w-16 pl-1"
                    src={language.logo}
                    alt={language.name}
                  />
                  <section class="py-4">
                    <h2 class="text-xl font-semibold">{language.name}</h2>
                    <h4 class="text-gray-600 dark:text-gray-400 text-wrap">
                      {language.description}
                    </h4>
                  </section>
                </a>
              </li>
            );
          })
        }
      </ul>
    </section>
  </main>
</main>
